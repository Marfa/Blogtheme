{{!< default}}

{{!-- Everything inside the #post tags pulls data from the post --}}
{{#post}}
    <div class="container wrapper">
    {{> post-hero}}
        <!-- секция баннеров  -->

        <script type="text/javascript">
            var myadspace = [];
            myadspace[0] = '<noindex><a href="https://pst.net/?f=4d5d6d5148e5f4038393633cc6e06c2b" target="_blank" rel="nofollow"><img src="https://blog.themarfa.name/content/images/2023/10/1200200-ru-no-fb.gif" alt="PST " style="min-width: 120px; width: 100%;"></a></noindex>'
            var x = 0;
            function rotate(myadspace) {
            while (x < myadspace.length) {
            var sort = Math.floor(Math.random() * myadspace.length);
            if (myadspace[sort] != 0) {
            document.getElementById('adspace').innerHTML = (myadspace[sort]);
            myadspace[sort] = 0;
            x++;
            }
            }
            }
        </script>
        <style>
            #adspace {
            }
            #adspace img {
            }
        </style>
        <div id="adspace">
            <script type="text/javascript">
                rotate(myadspace);
            </script>
        </div>
        <!-- секция баннеров -->
        <div class="post__content-inner">
            <article class="{{post_class}} content-wrap post-access-{{visibility}}">
