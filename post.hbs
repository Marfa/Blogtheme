<script type="text/javascript">
var myadspace = [];
myadspace[0] = '<noindex><a href="https://go.mybrocard.com/themarfa" target="_blank" rel="nofollow"><img src="https://blog.themarfa.name/content/images/size/w1600/2024/06/marfa-pr.png" alt="Any Bill" style="min-width: 120px; width: 100%;"></a></noindex>'
var x = 0;
function rotate(myadspace) {
while (x < myadspace.length) {
var sort = Math.floor(Math.random() * myadspace.length);
if (myadspace[sort] != 0) {
document.getElementById('adspace').innerHTML = (myadspace[sort]);
myadspace[sort] = 0;
x++;
}
}
}
</script>
<style>
#adspace {
}
#adspace img {
}
</style>
<div id="adspace">
<script type="text/javascript">
rotate(myadspace);
</script>
</div>
