{
  "name": "joben",
  "description": "Joben Ghost Theme",
  "demo": "",
  "version": "2.8.0",
  "engines": {
    "ghost": ">=5.0.0"
  },
  "author": {
    "name": "Bright Themes",
    "email": "hi@brightthemes.com",
    "url": "https://brightthemes.com"
  },
  "keywords": [
    "ghost",
    "theme",
    "ghost-theme"
  ],
  "gpm": {
    "type": "theme",
    "categories": [
      "Magazine",
      "Blog",
      "Minimal"
    ]
  },
  "scripts": {
    "dev": "gulp",
    "build": "gulp build",
    "zip": "gscan . && gulp zip",
    "test": "gscan ."
  },
  "dependencies": {
    "@babel/core": "^7.23.5",
    "@babel/preset-env": "^7.23.5",
    "@tryghost/content-api": "^1.11.20",
    "beeper": "^2.1.0",
    "browser-sync": "^2.29.3",
    "cssnano": "^5.1.15",
    "cssnano-preset-advanced": "^5.3.10",
    "feather-icons": "^4.29.1",
    "fitvids": "^2.1.1",
    "fslightbox": "^3.4.1",
    "gscan": "^4.42.0",
    "gulp": "^4.0.2",
    "gulp-babel": "^8.0.0",
    "gulp-concat": "^2.6.1",
    "gulp-postcss": "^9.0.1",
    "gulp-rename": "^2.0.0",
    "gulp-uglify": "^3.0.2",
    "gulp-zip": "^5.1.0",
    "postcss": "^8.4.31",
    "postcss-cssential": "^1.1.0",
    "postcss-custom-media": "^8.0.2",
    "postcss-custom-properties": "^11.0.0",
    "postcss-import": "^14.1.0",
    "postcss-mixins": "^8.1.0",
    "postcss-nested": "^5.0.6",
    "postcss-preset-env": "^7.8.3",
    "prismjs": "^1.29.0",
    "pump": "^3.0.0",
    "tocbot": "^4.23.0",
    "vanilla-lazyload": "^12.5.1"
  },
  "config": {
    "custom": {
      "secondary_color": {
        "type": "color",
        "default": "#20f3a2"
      },
      "default_color_scheme": {
        "type": "select",
        "options": [
          "System",
          "Light",
          "Dark"
        ],
        "default": "System"
      },
      "typography": {
        "type": "select",
        "options": [
          "Manrope",
          "Cabin",
          "Lora",
          "Inconsolata"
        ],
        "default": "Manrope"
      },
      "post_feed_style": {
        "type": "select",
        "options": [
          "list",
          "grid"
        ],
        "default": "grid"
      },
      "enable_sticky_header": {
        "type": "boolean",
        "default": false
      },
      "enable_scroll_to_top": {
        "type": "boolean",
        "default": true
      },
      "show_comment_count": {
        "type": "boolean",
        "default": false
      },
      "hero_headline": {
        "type": "text",
        "group": "homepage"
      },
      "hero_description": {
        "type": "text",
        "group": "homepage"
      },
      "hero_form": {
        "type": "boolean",
        "default": true,
        "group": "homepage"
      },
      "hero_stats": {
        "type": "boolean",
        "default": false,
        "group": "homepage"
      },
      "enable_image_lightbox": {
        "type": "boolean",
        "default": true,
        "group": "post"
      },
      "open_external_links_in_new_tab": {
        "type": "boolean",
        "default": false,
        "group": "post"
      }
    },
    "card_assets": true,
    "posts_per_page": 12,
    "image_sizes": {
      "xxs": {
        "width": 30
      },
      "xs": {
        "width": 100
      },
      "s": {
        "width": 300
      },
      "m": {
        "width": 600
      },
      "l": {
        "width": 1000
      },
      "xl": {
        "width": 2000
      }
    }
  }
}
