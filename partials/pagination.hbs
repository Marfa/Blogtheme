<div class="post-list__pagination" role="navigation">
    <span class="page-number">Страница {{page}} из {{pages}}</span>
    <div>
    {{#if prev}}
        <a class="newer-posts" href="{{page_url prev}}">&larr; К новым постам</a>
    {{/if}}
    {{#if next}}
        <a class="older-posts" href="{{page_url next}}">К старым постам &rarr;</a>
    {{/if}}
    </div>
</div>