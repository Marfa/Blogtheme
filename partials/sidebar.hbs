<aside class="sidebar">
    {{!-- Site Info & subscribe --}}
    <div class="section__title m-b">{{#if hero_headline}}{{hero_headline}}{{else}}{{@site.title}}{{/if}}</div>

    <div class="sidebar__section">
        <div class="sidebar__descr" id="sidebar-descr">
        </div>

        {{!-- Sidebar featured posts --}}
        {{#is "post"}}
            {{#get "posts" filter="featured:true+id:-{{comment_id}}" limit="5" include="authors,tags" as |featured|}}
                {{#if featured}}
                    <div class="section__title m-b">{{t "Featured posts"}}</div>
                    <div class="sidebar__section">
                        {{#foreach featured}}
                            <article class="sidebar__story">
                                {{#if feature_image}}
                                    <a href="{{url}}" class="sidebar__story-image m-r">
                                        <img
                                                class="lazyload"
                                                alt="{{title}}"
                                                data-src="{{img_url feature_image size="xs"}}"
                                                src="{{img_url feature_image size="xxs"}}"
                                        />
                                    </a>
                                {{/if}}
                                <h6 class="sidebar__story-title">
                                    <a href="{{url}}">{{{title}}}</a>
                                </h6>
                            </article>
                        {{/foreach}}
                    </div>
                {{/if}}
            {{/get}}
        {{/is}}

        {{!-- Tags --}}
        <div class="section__title m-b">{{t "Explore topics"}}</div>
        <div class="sidebar__section">
            {{#get "tags" limit="6" include="count.posts" order="count.posts desc"}}
                {{#foreach tags}}
                    <a class="sidebar__tag" href="{{url}}" title="{{name}}" aria-label="{{name}}">
                        <h6 class="sidebar__tag-name">{{name}}</h6>
                        <div class="sidebar__tag-count">{{count.posts}}</div>
                    </a>
                {{/foreach}}
            {{/get}}
        </div>

        {{!-- Sidebar latest posts --}}
        {{#is "post"}}
            {{#get "posts" filter="featured:false+id:-{{comment_id}}" limit="5" include="authors,tags" as |latest|}}
                <div class="section__title m-b">{{t "Latest posts"}}</div>
                <div class="sidebar__section">
                    {{#foreach latest}}
                        <article class="sidebar__story">
                            {{#if feature_image}}
                                <a href="{{url}}" class="sidebar__story-image m-r">
                                    <img
                                            class="lazyload"
                                            alt="{{title}}"
                                            data-src="{{img_url feature_image size="xs"}}"
                                            src="{{img_url feature_image size="xxs"}}"
                                    />
                                </a>
                            {{/if}}
                            <h6 class="sidebar__story-title">
                                <a href="{{url}}">{{{title}}}</a>
                            </h6>
                        </article>
                    {{/foreach}}
                </div>
            {{/get}}
        {{/is}}
</aside>
