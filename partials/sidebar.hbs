<div class="sidebar">
    <div class="sidebar__block sidebar__block_no-mobile">
        <button class="sidebar__button theme-switch"></button>
    </div>
   
    {{# if ads}}
    <div class="sidebar__block sidebar__block_no-padding">
        <ins class="adsbygoogle"
             style="display:block;width:100%;max-height:250px;"
             data-ad-format="rectangle"
             data-ad-client="ca-pub-6070814285497936"
             data-ad-slot="3487354804"></ins>
    </div>
    {{/if}}

    <div class="sidebar__block">
        <span class="sidebar__block-title">Соцсети</span>
        <div class="sidebar__social">
            <a href="https://t.me/themarfa" target="_blank">{{> "icons/telegram"}}</a>
            <a href="https://twitter.com/themarfa" target="_blank">{{> "icons/twitter"}}</a>
            <a href="https://vk.com/themarfa" target="_blank">{{> "icons/vk"}}</a>
            <a href="https://facebook.com/groups/themarfa" target="_blank">{{> "icons/facebook"}}</a>
            <a href="https://tt.me/themarfa" rel="nofollow" target="_blank">{{> "icons/tamtam"}}</a>
            <a href="https://pinterest.com/themarfa" target="_blank">{{> "icons/pinterest"}}</a>
        </div>
    </div>
    


    <div class="sidebar__block sidebar__block_no-mobile">
        <span class="sidebar__block-title">Поделиться</span>
        <div class="addthis_inline_share_toolbox"></div>
    </div>

    <div class="sidebar__block sidebar__block_no-padding">
        <!--Telegram Widget-->
        <iframe id="tgw_5d273ad583ba888b628b456a" frameborder="0" scrolling="no" horizontalscrolling="no" verticalscrolling="no" width="100%" height="540px" async></iframe><script>document.addEventListener("DOMContentLoaded",function(){document.getElementById("tgw_5d273ad583ba888b628b456a").setAttribute("src","https://tgwidget.com/channel/v2.0/?id=5d273ad583ba888b628b456a")})</script>
    </div>

    <div class="sidebar__block sidebar__block_recent">
        <span class="sidebar__block-title">Недавние посты</span>
        {{#get "posts" limit="3" filter="id:-{{post.id}}" as |recents|}}
            {{#foreach recents}}
                <a href="{{url}}">{{title}}</a>
            {{/foreach}}
        {{/get}}
    </div>
	
	    {{# if ads}}
    <div class="sidebar__block sidebar__block_no-padding">
        <ins class="adsbygoogle"
             style="display:block;width:100%;max-height:250px;"
             data-ad-format="rectangle"
             data-ad-client="ca-pub-6070814285497936"
             data-ad-slot="3487354804"></ins>
