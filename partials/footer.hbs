{{!-- Site footer --}}
<footer class="footer">
  <div class="container wrapper">
    <div class="footer__top p-t">
      <div class="row p-t border-bottom-1">
        <div class="col-xs-12 col-md-2">
          <div class="footer__title m-b-sm">{{t "Navigation"}}</div>
          {{navigation}}
        </div>
        <div class="col-xs-12 col-md-2">
          <div class="footer__title m-b-sm">{{t "Теги"}}</div>
          {{#get "tags" include="count.posts" order="count.posts desc" limit="5"}}
            <div class="footer__tags flex flex-col m-b">
              {{#foreach tags}}
                <a href="{{url}}">{{name}}</a>
              {{/foreach}}
            </div>
          {{/get}}
        </div>
        <div class="col-xs-12 col-md-2">
          {{#if @site.secondary_navigation}}
            <div class="footer__title m-b-sm">{{t "Quick links"}}</div>
            {{navigation type="secondary"}}
          {{/if}}
        </div>
        <div class="col-xs-12 col-md-2">
        <iframe id="tgw_5d273ad583ba888b628b456a" frameborder="0" scrolling="no" horizontalscrolling="no" verticalscrolling="no" width="100%" height="540px" async></iframe><script>document.addEventListener("DOMContentLoaded",function(){document.getElementById("tgw_5d273ad583ba888b628b456a").setAttribute("src","https://tgwidget.com/channel/v2.0/?id=5d273ad583ba888b628b456a")})</script>
        </div>
        <div class="col-xs-12 col-md-4 m-b">
          <div class="footer__title m-b-sm">{{@site.title}}</div>
          <div class="m-b">{{@site.description}}</div>
        </div>
      </div>
    </div>
    {{!-- Footer Bottom --}}
    <div class="footer__bottom p-t p-b">
      &copy;{{date format="YYYY"}}&nbsp;<a href="{{@site.url}}">{{@site.title}}</a>
    </div>
  </div>
</footer>
