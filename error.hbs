{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

{{! The main content area on the homepage }}
<main class="site-main wow fadeIn" data-wow-duration=".8s" role="main">

  <section class="site-error-message">
    <h1 class="site-error-code">{{statusCode}}</h1>
    <h2 class="site-error-description">{{message}}</h2>
    <a class="site-error-link" href="{{@site.url}}">Вернуться на главную →</a>
  </section>

  {{> widget-recent-posts}}

</main>
