{{!< default}}

{{#post}}
    <div class="container wrapper">
        {{> post-hero}}
        <article class="{{post_class}} content-wrap post-access-{{visibility}}">
            <!-- uSocial -->
            <script async src="https://usocial.pro/usocial/usocial.js?uid=e74bd6c291f76595&v=6.1.5"
                    data-script="usocial" charset="utf-8"></script>
            <div class="uSocial-Share" data-pid="3fc31b11e147ab1cb25ef5a7a07472a8" data-type="share"
                 data-options="round-rect,style1,default,absolute,horizontal,size48,eachCounter1,counter0,nomobile,mobile_position_right"
                 data-social="vk,twi,telegram,print,bookmarks,email"></div>
            <!-- /uSocial -->
            <div class="content">
                {{#if access}}
                    <p>Статья скрыта в соответствии с законодательством РФ. Получить полный текст статьи можно
                        <a href="https://t.me/+0j3SL7x0PhkwZTcy" target="_blank">по ссылке</a>.</p>
                    <div class="content-overlay">
                        {{content}}
                    </div>
                {{else}}
                    {{> content-cta fading=true}}
                {{/if}}
            </div>
        </article>
    </div>

    {{!-- Include Comments --}}
    <script src="https://cdn.fastcomments.com/js/embed-v2.min.js"></script>
    <div id="fastcomments-widget"></div>
    <script>
        window.FastCommentsUI(document.getElementById('fastcomments-widget'), {
            "tenantId": "iPjaMPm9xQu"
        });
    </script>

    {{!-- Related posts --}}
    {{> related-posts}}
{{/post}}


<style>
    .content-overlay {
        position: relative;
        display: flex;
        flex-direction: column;
        align-items: center;
        color: var(--color-text-acc-1);
        user-select: none; /* Disable text selection */
        overflow: hidden; /* Ensures no content is visible outside the overlay */
        max-width: 100%; /* Ensure that the overlay does not extend beyond the content area */
    }

    .content-overlay::after {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.9); /* Dark overlay */
        backdrop-filter: blur(5px); /* Optional blur for effect */
        pointer-events: none; /* Prevent interaction with the content */
    }

    .content-overlay .content {
        display: flex;
        flex-direction: column;
        align-items: center;
        width: 100%; /* Ensure the content stays within the bounds of the container */
    }

    .content-overlay .content > * {
        width: 100%; /* Ensure all child elements take full width within the container */
    }

    .content-overlay p {
        text-align: center;
        margin-bottom: 20px;
        font-size: 1.2rem;
        color: var(--color-text-acc-1);
    }

    .content-overlay a {
        color: var(--color-primary);
        text-decoration: underline;
    }

    /* Ensuring that content remains hidden until certain conditions are met */
    .content-overlay .content,
    .content-overlay .content * {
        visibility: hidden; /* Initially hide the content */
    }

    .content-overlay.show .content,
    .c

</style>
