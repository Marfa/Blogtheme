{{!< default}}

{{!-- Everything inside the #post tags pulls data from the post --}}
{{#post}}
<div class="container wrapper">
  {{> post-hero}}
  <article class="{{post_class}} content-wrap post-access-{{visibility}}">
<!-- uSocial -->
<script async src="https://usocial.pro/usocial/usocial.js?uid=e74bd6c291f76595&v=6.1.5" data-script="usocial" charset="utf-8"></script>
<div class="uSocial-Share" data-pid="3fc31b11e147ab1cb25ef5a7a07472a8" data-type="share" data-options="round-rect,style1,default,absolute,horizontal,size48,eachCounter1,counter0,nomobile,mobile_position_right" data-social="vk,twi,telegram,print,bookmarks,email"></div>
<!-- /uSocial -->
    <div class="content">
      {{#if access}}
        {{content}}

        {{#if primary_tag}}
          <hr>
          <div class="post-tags flex">
            {{#foreach tags}}
              <a class="tag-{{slug}} m-r bg-acc-2 text-sm fw-700" href="{{url}}" 
                title="{{name}}" aria-label="{{name}}">#{{name}}</a>
            {{/foreach}}
          </div>
          <hr>
        {{/if}}
      {{else}}
        {{> content-cta fading=true}}
      {{/if}}
    </div>
  </article>
</div>

{{!-- Include Comments --}}
        <script src="https://cdn.fastcomments.com/js/embed-v2.min.js"></script>
<div id="fastcomments-widget"></div>
<script>
window.FastCommentsUI(document.getElementById('fastcomments-widget'), {
    "tenantId": "iPjaMPm9xQu"
});
</script>

{{!-- Related posts --}}
{{> related-posts}}
{{/post}}
