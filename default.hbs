    <link rel="stylesheet" type="text/css" href="{{asset "css/app.css"}}">
    <script type="text/javascript" src="{{asset "scripts/main.js"}}"></script>
    {{ghost_head}}
</head>
<body class="{{body_class}}">
<script>if ((window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches && !document.cookie.includes('dark=false')) || document.cookie.includes('dark=true')) {
    document.body.classList.add('dark');
}</script>
{{> "nav"}}
<main class="wow fadeIn">
{{{body}}}
</main>

{{> footer}}
<div class="scroll-to-top hidden"></div>
{{ghost_foot}}
</body>
