{{!< default}}

{{!-- Everything inside the #post tags pulls data from the post --}}
{{#post}}
<div class="container wrapper">
  {{> post-hero}}
</div>
<!-- market place  -->
<div id="mp_custom_6934"></div> <script>window.mpsuStart = window.mpsuStart || [], window.mpsuStart.push(6934);</script>                            
<!-- market place  -->                 
<div class="container wrapper">
  {{> post-hero}}
  <div class="row">
    <div class="col-xs-12 col-lg-8 col-xl-9">
      <article class="{{post_class}} content-wrap post-access-{{visibility}} no-overflow">
        <div class="content">
          {{#if custom_excerpt}}
            <p class="context-excerpt text-lg">
              {{custom_excerpt}}
            </p>
          {{/if}}
          {{#if access}}
            {{content}}
<div class="kg-card kg-button-card kg-align-center"><a href="https://pay.cloudtips.ru/p/e66259cc" class="kg-btn kg-btn-accent" target="_blank" rel="noreferrer noopener">Поддержать донатом</a></div>
            {{#if tags}}
              <hr>
              <div class="post-tags flex">
                {{#foreach tags}}
                  <a class="tag-{{slug}} m-r bg-acc-2 text-sm fw-700" href="{{url}}" 
                    title="{{name}}" aria-label="{{name}}">#{{name}}</a>
                {{/foreach}}
              </div>
              <hr>
            {{/if}}
          {{else}}
            {{> content-cta fading=true}}
          {{/if}}
        </div>
      </article>
    </div>
    <div class="col-xs-12 col-lg-4 col-xl-3">
      {{> sidebar}}
    </div>
  </div>
</div>

{{!-- Include Comments --}}
{{#if access}}
  {{> comments}}
{{/if}}

{{!-- Related posts --}}
{{> related-posts}}
{{/post}}
