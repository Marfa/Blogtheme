{{!< default}}

{{#is "index"}}
    {{> featured_posts}}
{{/is}}

{{#is "tag"}}
    <h2 class="index-title">Posts by tag "{{tag.name}}"</h2>
{{/is}}

{{#is "author"}}
    {{> author author}}
{{/is}}

<div class="post-list">
    <section class="posts">
        <div class="posts__partner wow fadeIn">
            <div class="posts__partner-soc">
                <a href="tg://resolve?domain=themarfa_en" target="_blank">{{> "icons/telegram"}}</a>
                <a href="https://twitter.com/themarfaen" target="_blank">{{> "icons/twitter"}}</a>
                <a href="https://facebook.com/groups/themarfaen" target="_blank">{{> "icons/facebook"}}</a>
            </div>
            <span>Commercial Inquiries â€” <a href="mailto:biz@themarfa.name">biz@themarfa.name</a>, <a href="tg://resolve?domain=immarfa">@immarfa</a></span>
        </div>

        {{#is "author"}}<span class="post-list__count">{{plural pagination.total empty='No publications' singular='% publication' plural='% publications'}}</span>{{/is}}

        {{#foreach posts}}
            <article class="{{post_class}} wow fadeIn">
                <div class="post__image">
                    {{#if feature_image}}
                    <img src="{{img_url feature_image}}">
                    {{/if}}
                </div>
                <div class="post__info {{#unless feature_image}}post__info_full-width{{/unless}}">
                    <div class="post__main-info">
                        <h1 class="post__title"><a href="{{url}}">{{#if featured}}ðŸ”¥ {{/if}}{{title}}</a></h1>
                        <p class="post__excerpt">{{excerpt words="7"}}</p>
                    </div>

                    <div class="post__secondary-info">
                        <div class="post__tags">
                            <div class="post__tags-wrapper">
                                <div class="post__tags-inner">
                                {{#foreach tags}}
                                    <a href="{{url}}" class="tag">{{name}}</a>
                                {{/foreach}}
                                </div>
                            </div>
                        </div>

                        <a href="{{url}}" class="post__view-full">Read more â†’</a>
                    </div>
                </div>
            </article>
        {{/foreach}}
    </section>

    <script>
        let el = document.createElement('ins');
        let d = el.dataset;
        el.className = "adsbygoogle";
        d.adClient = "ca-pub-6070814285497936";
        d.adSlot = "3487354804";
        d.adFormat = "horizontal";
        d.fullWidthResponsive = "true";
        el.setAttribute("style", "display:block;width:100%;max-height:200px;");
        let q = $('.post-list .post:nth-of-type(5)');
        $(q).after(el);
    </script>
</div>

{{pagination}}

<div class="index-ad">
    <ins class="adsbygoogle"
        style="display:block;width:100%;max-height:200px;"
        data-ad-client="ca-pub-6070814285497936"
        data-ad-slot="3487354804"
        data-ad-format="horizontal"
        data-full-width-responsive="true"></ins>
</div>