{{!< default}}

{{!-- Everything inside the #post tags pulls data from the post --}}
{{#post}}
<div class="container wrapper">
  {{> post-hero}}
</div>
<!-- market place  -->
<div id="mp_custom_6934"></div> <script>window.mpsuStart = window.mpsuStart || [], window.mpsuStart.push(6934);</script>                            
<!-- market place  -->                 
                <div class="post__content-inner">
  <div class="row post-with-toc">

    <div class="col-xs-12 col-xl-3 toc-wrapper">
      {{#if access}}
        <div class="section__title m-b">{{t "Table of Contents"}}</div>
        <div class="post-toc">
          <div class="post-toc__head js-toc-toggle">
            <div class="post-toc__icon js-toc-icon">{{>icon name="chevron-right" size="sm"}}</div>
            <div class="post-toc__title m-b-0">{{t "Table of Contents"}}</div>
          </div>
          <div class="post-toc__content js-toc"></div>
        </div>
      {{/if}}
    </div>
    <div class="col-xs-12 col-lg-8 col-xl-6">
      <article class="{{post_class}} content-wrap post-access-{{visibility}} js-toc-content no-overflow">
<!-- uSocial -->
<script async src="https://usocial.pro/usocial/usocial.js?uid=e74bd6c291f76595&v=6.1.5" data-script="usocial" charset="utf-8"></script>
<div class="uSocial-Share" data-pid="3fc31b11e147ab1cb25ef5a7a07472a8" data-type="share" data-options="round-rect,style1,default,absolute,horizontal,size48,eachCounter1,counter0,nomobile,mobile_position_right" data-social="vk,twi,telegram,print,bookmarks,email"></div>
<!-- /uSocial -->
        <div class="content">
          {{#if access}}
            {{content}}
<div class="kg-card kg-button-card kg-align-center"><a href="https://pay.cloudtips.ru/p/e66259cc" class="kg-btn kg-btn-accent" target="_blank" rel="noreferrer noopener">Поддержать донатом</a></div>
            {{#if tags}}
              <hr>
              <div class="post-tags flex">
                {{#foreach tags}}
                  <a class="tag-{{slug}} m-r bg-acc-2 text-sm fw-700" href="{{url}}" 
                    title="{{name}}" aria-label="{{name}}">#{{name}}</a>
                {{/foreach}}
              </div>
              <hr>
            {{/if}}
          {{else}}
            {{> content-cta fading=true}}
          {{/if}}
        </div>
      </article>
    </div>
    <div class="col-xs-12 col-lg-4 col-xl-3">
      {{> sidebar}}
    </div>
  </div>
</div>

{{!-- Include Comments --}}
        <script src="https://cdn.fastcomments.com/js/embed-v2.min.js"></script>
<div id="fastcomments-widget"></div>
<script>
window.FastCommentsUI(document.getElementById('fastcomments-widget'), {
    "tenantId": "iPjaMPm9xQu"
});
</script>

{{!-- Related posts --}}
{{> related-posts}}
{{/post}}
