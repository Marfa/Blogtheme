myadspace[0] = '<noindex><a href="https://pst.net/private?utm_source=themarfa_banner1" target="_blank" rel="nofollow"><img src="https://blog.themarfa.name/content/images/2023/10/1200200-ru-no-fb.gif" alt="PST" style="min-width: 120px; width: 100%;" width:100%></a></noindex>'
myadspace[1] = '<noindex><a href="https://abcard.io?utm_source=media&utm_medium=cpc&utm_campaign=blogthemarfa&utm_content=banner_03" target="_blank" rel="nofollow"><img src="https://blog.themarfa.name/content/images/2024/03/1200-200_gif.gif" alt="Any Bill" style="min-width: 120px; width: 100%;"></a></noindex>'
var x = 0;
function rotate(myadspace) {
while (x < myadspace.length) {
